<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}DCA Tracker{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-light bg-white border-bottom">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_dashboard') }}">DCA Tracker</a>
        <div>
            {% if app.user %}
                <span class="me-3">{{ app.user.pseudo }}</span>
                <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_logout') }}">DÃ©connexion</a>
            {% else %}
                <a class="btn btn-primary btn-sm" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </div>
    </div>
</nav>

<main class="container py-4">{% block body %}{% endblock %}</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
