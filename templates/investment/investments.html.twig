{% extends 'dashboard/layout.html.twig' %}

{% block title %}Mes Investissements - Crypto Investment Tracker{% endblock %}

{% block page_title %}Mes Investissements{% endblock %}
{% block page_subtitle %}Détail de tous vos investissements et leur performance{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <!-- Filtres et recherche -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Rechercher un investissement...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="typeFilter">
                                <option value="">Tous les types</option>
                                <option value="crypto">Cryptomonnaies</option>
                                <option value="asset">Actifs</option>
                                <option value="savings">Épargne</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tous les statuts</option>
                                <option value="active">Actif</option>
                                <option value="inactive">Inactif</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" onclick="resetFilters()">
                                <i class="fas fa-refresh me-2"></i>Réinitialiser
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des investissements -->
    <div class="row" id="investmentsList">
        {% for investment in investments %}
            <div class="col-lg-6 col-xl-4 mb-4 investment-card" 
                 data-type="{{ investment.type }}" 
                 data-status="{{ investment.status }}"
                 data-name="{{ investment.name|lower }}">
                <div class="card investment-item">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="investment-header">
                            <h6 class="investment-name mb-1">{{ investment.name }}</h6>
                            <span class="investment-symbol">{{ investment.symbol ?? investment.bank_name ?? '' }}</span>
                        </div>
                        <div class="investment-type">
                            <span class="badge bg-{{ investment.type == 'crypto' ? 'warning' : (investment.type == 'asset' ? 'info' : 'success') }}">
                                {{ investment.type|capitalize }}
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <!-- Métriques principales -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="metric">
                                    <div class="metric-label">Investi</div>
                                    <div class="metric-value">${{ investment.total_invested|number_format(2) }}</div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="metric">
                                    <div class="metric-label">Valeur Actuelle</div>
                                    <div class="metric-value">${{ investment.current_value|number_format(2) }}</div>
                                </div>
                            </div>
                        </div>

                        <!-- Performance -->
                        {% set gain = investment.current_value - investment.total_invested %}
                        {% set gain_percent = investment.total_invested > 0 ? (gain / investment.total_invested) * 100 : 0 %}
                        
                        <div class="performance mb-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="performance-label">Performance</span>
                                <span class="performance-value {{ gain >= 0 ? 'text-success' : 'text-danger' }}">
                                    {{ gain >= 0 ? '+' : '' }}${{ gain|number_format(2) }}
                                    ({{ gain >= 0 ? '+' : '' }}{{ gain_percent|number_format(2) }}%)
                                </span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar {{ gain >= 0 ? 'bg-success' : 'bg-danger' }}" 
                                     style="width: {{ gain_percent|abs > 100 ? 100 : gain_percent|abs }}%"></div>
                            </div>
                        </div>

                        <!-- Informations spécifiques -->
                        {% if investment.type == 'crypto' %}
                            <div class="investment-info">
                                <div class="info-item">
                                    <i class="fas fa-coins me-2"></i>
                                    <span>Cryptomonnaie</span>
                                </div>
                            </div>
                        {% elseif investment.type == 'asset' %}
                            <div class="investment-info">
                                <div class="info-item">
                                    <i class="fas fa-chart-line me-2"></i>
                                    <span>{{ investment.category|capitalize }}</span>
                                </div>
                            </div>
                        {% elseif investment.type == 'savings' %}
                            <div class="investment-info">
                                <div class="info-item">
                                    <i class="fas fa-percentage me-2"></i>
                                    <span>Taux: {{ investment.annual_rate|number_format(2) }}%</span>
                                </div>
                            </div>
                        {% endif %}

                        <!-- Statut -->
                        <div class="investment-status mb-3">
                            <span class="badge bg-{{ investment.status == 'active' ? 'success' : 'secondary' }}">
                                <i class="fas fa-{{ investment.status == 'active' ? 'check-circle' : 'pause-circle' }} me-1"></i>
                                {{ investment.status == 'active' ? 'Actif' : 'Inactif' }}
                            </span>
                        </div>

                        <!-- Actions -->
                        <div class="investment-actions">
                            <a href="{{ path('app_investment_investment_detail', {'id': investment.id}) }}" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Détails
                            </a>
                            <button class="btn btn-outline-secondary btn-sm" onclick="viewDocuments('{{ investment.id }}')">
                                <i class="fas fa-file-alt me-1"></i>Documents
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Message si aucun investissement -->
    {% if investments is empty %}
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun investissement trouvé</h5>
                        <p class="text-muted">Commencez par ajouter vos premiers investissements pour les suivre ici.</p>
                        <a href="{{ path('app_crypto_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Ajouter un Investissement
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

<style>
.investment-item {
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 15px;
}

.investment-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.investment-header {
    flex: 1;
}

.investment-name {
    font-weight: 600;
    color: #2c3e50;
    margin: 0;
}

.investment-symbol {
    font-size: 12px;
    color: #6c757d;
}

.metric {
    text-align: center;
}

.metric-label {
    font-size: 12px;
    color: #6c757d;
    margin-bottom: 5px;
}

.metric-value {
    font-size: 16px;
    font-weight: 700;
    color: #2c3e50;
}

.performance {
    background: #f8f9fa;
    padding: 15px;
    border-radius: 10px;
}

.performance-label {
    font-size: 14px;
    color: #6c757d;
}

.performance-value {
    font-weight: 600;
    font-size: 14px;
}

.investment-info {
    margin-bottom: 15px;
}

.info-item {
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #6c757d;
}

.investment-actions {
    display: flex;
    gap: 10px;
}

.investment-actions .btn {
    flex: 1;
}

.card-header {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border-radius: 15px 15px 0 0 !important;
    border: none;
}

.badge {
    font-size: 11px;
    padding: 6px 10px;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const typeFilter = document.getElementById('typeFilter');
    const statusFilter = document.getElementById('statusFilter');
    const investmentCards = document.querySelectorAll('.investment-card');

    function filterInvestments() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedType = typeFilter.value;
        const selectedStatus = statusFilter.value;

        investmentCards.forEach(card => {
            const name = card.dataset.name;
            const type = card.dataset.type;
            const status = card.dataset.status;

            const matchesSearch = name.includes(searchTerm);
            const matchesType = !selectedType || type === selectedType;
            const matchesStatus = !selectedStatus || status === selectedStatus;

            if (matchesSearch && matchesType && matchesStatus) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }

    searchInput.addEventListener('input', filterInvestments);
    typeFilter.addEventListener('change', filterInvestments);
    statusFilter.addEventListener('change', filterInvestments);
});

function resetFilters() {
    document.getElementById('searchInput').value = '';
    document.getElementById('typeFilter').value = '';
    document.getElementById('statusFilter').value = '';
    
    document.querySelectorAll('.investment-card').forEach(card => {
        card.style.display = 'block';
    });
}

function viewDocuments(investmentId) {
    // Rediriger vers la page des documents avec filtre
    window.location.href = `{{ path('app_investment_documents') }}?investment=${investmentId}`;
}
</script>
{% endblock %}
