{% extends 'dashboard/layout.html.twig' %}

{% block title %}Calendrier des Échéances - Crypto Investment Tracker{% endblock %}

{% block page_title %}Calendrier des Échéances{% endblock %}
{% block page_subtitle %}Suivi de tous vos paiements et échéances à venir{% endblock %}

{% block dashboard_content %}
<div class="container-fluid">
    <!-- Navigation du calendrier -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Échéances des 12 Prochains Mois
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary" onclick="exportCalendar()">
                                    <i class="fas fa-download me-2"></i>Exporter
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="printCalendar()">
                                    <i class="fas fa-print me-2"></i>Imprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Vue mensuelle du calendrier -->
    <div class="row" id="calendarView">
        {% for monthData in calendar %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card calendar-month">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-calendar me-2"></i>
                            {{ monthData.month|date('F Y') }}
                        </h6>
                        <div class="month-total">
                            <span class="badge bg-primary">${{ monthData.total_amount|number_format(2) }}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if monthData.payments %}
                            {% for payment in monthData.payments %}
                                <div class="payment-item">
                                    <div class="payment-date">
                                        <div class="date-day">{{ payment.date|date('d') }}</div>
                                        <div class="date-month">{{ payment.date|date('M') }}</div>
                                    </div>
                                    <div class="payment-details">
                                        <div class="payment-amount">${{ payment.amount|number_format(2) }}</div>
                                        <div class="payment-investment">{{ payment.investment }}</div>
                                        <div class="payment-type">
                                            <span class="badge bg-{{ payment.type == 'dividend' ? 'success' : (payment.type == 'interest' ? 'info' : 'warning') }}">
                                                {{ payment.type|capitalize }}
                                            </span>
                                        </div>
                                    </div>
                                    <div class="payment-actions">
                                        <button class="btn btn-outline-primary btn-sm" onclick="viewPaymentDetails('{{ payment.investment }}')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="no-payments">
                                <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                                <p class="text-muted mb-0">Aucun paiement prévu</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Vue liste des échéances -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>Liste Chronologique des Échéances
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="paymentsTable">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Investissement</th>
                                    <th>Type</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for monthData in calendar %}
                                    {% for payment in monthData.payments %}
                                        <tr>
                                            <td>
                                                <div class="date-cell">
                                                    <div class="date-day">{{ payment.date|date('d') }}</div>
                                                    <div class="date-month">{{ payment.date|date('M Y') }}</div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="investment-cell">
                                                    <div class="investment-name">{{ payment.investment }}</div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-{{ payment.type == 'dividend' ? 'success' : (payment.type == 'interest' ? 'info' : 'warning') }}">
                                                    {{ payment.type|capitalize }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="amount-cell">
                                                    <strong>${{ payment.amount|number_format(2) }}</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-warning">En attente</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" onclick="viewPaymentDetails('{{ payment.investment }}')">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-secondary" onclick="setReminder('{{ payment.date|date('Y-m-d') }}')">
                                                        <i class="fas fa-bell"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques des échéances -->
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h4 class="stat-number">{{ calendar|map(c => c.payments|length)|sum }}</h4>
                    <p class="stat-label">Échéances Total</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <h4 class="stat-number">${{ calendar|map(c => c.total_amount)|sum|number_format(2) }}</h4>
                    <p class="stat-label">Montant Total</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4 class="stat-number">${{ (calendar|map(c => c.total_amount)|sum / 12)|number_format(2) }}</h4>
                    <p class="stat-label">Moyenne Mensuelle</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-day"></i>
                    </div>
                    <h4 class="stat-number">
                        {% set nextPayment = calendar|filter(c => c.payments|length > 0)|first %}
                        {% if nextPayment %}
                            {{ nextPayment.month|date('d/m') }}
                        {% else %}
                            -
                        {% endif %}
                    </h4>
                    <p class="stat-label">Prochaine Échéance</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.calendar-month {
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    border-radius: 15px;
    transition: transform 0.2s ease;
}

.calendar-month:hover {
    transform: translateY(-5px);
}

.calendar-month .card-header {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border-radius: 15px 15px 0 0 !important;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.month-total .badge {
    font-size: 14px;
    padding: 8px 12px;
}

.payment-item {
    display: flex;
    align-items: center;
    padding: 15px 0;
    border-bottom: 1px solid #e9ecef;
}

.payment-item:last-child {
    border-bottom: none;
}

.payment-date {
    width: 60px;
    text-align: center;
    margin-right: 15px;
}

.date-day {
    font-size: 20px;
    font-weight: 700;
    color: #667eea;
    line-height: 1;
}

.date-month {
    font-size: 12px;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.payment-details {
    flex: 1;
}

.payment-amount {
    font-size: 16px;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 5px;
}

.payment-investment {
    color: #6c757d;
    font-size: 14px;
    margin-bottom: 5px;
}

.no-payments {
    text-align: center;
    padding: 30px 0;
}

.date-cell {
    display: flex;
    align-items: center;
}

.date-cell .date-day {
    font-size: 16px;
    font-weight: 700;
    color: #667eea;
    margin-right: 8px;
}

.date-cell .date-month {
    font-size: 12px;
    color: #6c757d;
}

.investment-cell {
    display: flex;
    align-items: center;
}

.investment-name {
    font-weight: 600;
    color: #2c3e50;
}

.amount-cell {
    font-size: 16px;
}

.stat-card {
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    border-radius: 15px;
    transition: transform 0.2s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-icon {
    font-size: 48px;
    color: #667eea;
    margin-bottom: 15px;
}

.stat-number {
    font-size: 28px;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 5px;
}

.stat-label {
    color: #6c757d;
    font-size: 14px;
    margin: 0;
}

.card {
    border: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    border-radius: 15px;
}

.card-header {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border-radius: 15px 15px 0 0 !important;
    border: none;
}

.card-title {
    font-weight: 600;
}

.table {
    margin-bottom: 0;
}

.table th {
    border-top: none;
    font-weight: 600;
    color: #6c757d;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.btn-group-sm .btn {
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
}
</style>

<script>
function viewPaymentDetails(investment) {
    // Rediriger vers la page de détail de l'investissement
    window.location.href = `{{ path('app_investment_investments') }}?search=${encodeURIComponent(investment)}`;
}

function setReminder(date) {
    // Créer un événement de calendrier
    const event = {
        title: 'Échéance de paiement',
        start: date,
        allDay: true
    };
    
    // Générer un lien de calendrier
    const googleUrl = `https://calendar.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(event.title)}&dates=${date.replace(/-/g, '')}/${date.replace(/-/g, '')}`;
    
    window.open(googleUrl, '_blank');
}

function exportCalendar() {
    // Exporter le calendrier en CSV
    const table = document.getElementById('paymentsTable');
    const rows = table.querySelectorAll('tr');
    let csv = 'Date,Investissement,Type,Montant,Statut\n';
    
    for (let i = 1; i < rows.length; i++) {
        const cells = rows[i].querySelectorAll('td');
        if (cells.length > 0) {
            const row = [
                cells[0].textContent.trim(),
                cells[1].textContent.trim(),
                cells[2].textContent.trim(),
                cells[3].textContent.trim(),
                cells[4].textContent.trim()
            ];
            csv += row.join(',') + '\n';
        }
    }
    
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'calendrier-echeances.csv';
    a.click();
    window.URL.revokeObjectURL(url);
}

function printCalendar() {
    window.print();
}
</script>
{% endblock %}
