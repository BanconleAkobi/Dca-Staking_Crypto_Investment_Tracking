{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-fill fields based on account type
    const typeField = document.querySelector('select[name="savings_account[type]"]');
    const maxAmountField = document.querySelector('input[name="savings_account[maxAmount]"]');
    const annualRateField = document.querySelector('input[name="savings_account[annualRate]"]');
    const isTaxFreeField = document.querySelector('input[name="savings_account[isTaxFree]"]');

    function updateFieldsBasedOnType() {
        const selectedType = typeField.value;
        
        // Set default values based on French regulated savings accounts
        switch(selectedType) {
            case 'livret_a':
                maxAmountField.value = '22950';
                annualRateField.value = '3.0';
                isTaxFreeField.checked = true;
                break;
            case 'ldds':
                maxAmountField.value = '12000';
                annualRateField.value = '3.0';
                isTaxFreeField.checked = true;
                break;
            case 'lep':
                maxAmountField.value = '10000';
                annualRateField.value = '6.0';
                isTaxFreeField.checked = true;
                break;
            case 'laj':
                maxAmountField.value = '1600';
                annualRateField.value = '3.0';
                isTaxFreeField.checked = true;
                break;
            default:
                // Don't auto-fill for other types
                break;
        }
    }

    if (typeField) {
        typeField.addEventListener('change', updateFieldsBasedOnType);
    }
});
</script>
{% endblock %}
