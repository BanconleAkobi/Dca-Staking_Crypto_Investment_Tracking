{% extends 'dashboard/layout.html.twig' %}

{% block page_title %}Nouveau Compte d'Épargne{% endblock %}
{% block page_subtitle %}Ajoutez un nouveau compte d'épargne ou livret{% endblock %}

{% block dashboard_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-circle me-2"></i>
                    Ajouter un nouveau compte d'épargne
                </h3>
                <div class="card-actions">
                    <a href="{{ path('app_savings_account_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>
                        Retour
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'modern-form', 'novalidate': 'novalidate'}}) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-select modern-select'}}) }}
                            {{ form_errors(form.type) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.bankName, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.bankName, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.bankName) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.accountNumber, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.accountNumber, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.accountNumber) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.currentBalance, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.currentBalance, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.currentBalance) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.annualRate, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.annualRate, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.annualRate) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.maxAmount, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.maxAmount, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.maxAmount) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.openingDate, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.openingDate, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.openingDate) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.maturityDate, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.maturityDate, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.maturityDate) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.taxRate, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.taxRate, {'attr': {'class': 'form-control modern-input'}}) }}
                            {{ form_errors(form.taxRate) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check">
                                {{ form_widget(form.isTaxFree, {'attr': {'class': 'form-check-input modern-checkbox'}}) }}
                                {{ form_label(form.isTaxFree, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(form.isTaxFree) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-check">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input modern-checkbox'}}) }}
                                {{ form_label(form.isActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            {{ form_errors(form.isActive) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control modern-textarea'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-actions">
                    <a href="{{ path('app_savings_account_index') }}" class="btn btn-secondary-modern btn-modern">
                        <i class="fas fa-times me-2"></i>
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary-modern btn-modern">
                        <i class="fas fa-save me-2"></i>
                        Enregistrer le compte
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

