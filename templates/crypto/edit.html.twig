{% extends 'dashboard/layout.html.twig' %}

{% block page_title %}Modifier {{ crypto.name }}{% endblock %}
{% block page_subtitle %}Modifiez les informations de cette cryptomonnaie{% endblock %}

{% block dashboard_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    Modifier {{ crypto.name }}
                </h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
                
                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger-modern alert-modern mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name) }}
                            {% if form.name.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.name) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.symbol, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.symbol) }}
                            {% if form.symbol.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.symbol) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('app_crypto_index') }}" class="btn btn-secondary-modern btn-modern">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour
                    </a>
                    <button type="submit" class="btn btn-primary-modern btn-modern">
                        <i class="fas fa-save me-2"></i>
                        Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
