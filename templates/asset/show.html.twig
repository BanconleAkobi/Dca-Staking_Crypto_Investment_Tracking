{% extends 'dashboard/layout.html.twig' %}

{% block page_title %}{{ asset.name }}{% endblock %}
{% block page_subtitle %}{{ asset.getTypeLabel() }} - {{ asset.symbol }}{% endblock %}

{% block dashboard_content %}
<div class="row">
    <div class="col-lg-8">
        <!-- Asset Details -->
        <div class="content-card mb-4">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-{{ get_asset_type_icon(asset.type) }} me-2"></i>
                    Détails de l'actif
                </h3>
                <div class="card-actions">
                    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>
                        Modifier
                    </a>
                    <form method="post" action="{{ path('app_asset_toggle_status', {'id': asset.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ asset.id) }}">
                        <button type="submit" class="btn btn-outline-{{ asset.isActive ? 'warning' : 'success' }} btn-sm">
                            <i class="fas fa-{{ asset.isActive ? 'pause' : 'play' }} me-1"></i>
                            {{ asset.isActive ? 'Désactiver' : 'Activer' }}
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-group">
                            <span class="info-label">Nom</span>
                            <div class="info-value">{{ asset.name }}</div>
                        </div>
                        
                        <div class="info-group">
                            <span class="info-label">Symbole</span>
                            <div class="info-value">
                                <span class="badge bg-primary fs-6">{{ asset.symbol }}</span>
                            </div>
                        </div>
                        
                        <div class="info-group">
                            <span class="info-label">Type</span>
                            <div class="info-value">
                                <i class="fas fa-{{ get_asset_type_icon(asset.type) }} me-2"></i>
                                {{ asset.getTypeLabel() }}
                            </div>
                        </div>
                        
                        {% if asset.category %}
                        <div class="info-group">
                            <span class="info-label">Catégorie</span>
                            <div class="info-value">{{ asset.getCategoryLabel() }}</div>
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="col-md-6">
                        {% if asset.currentPrice %}
                        <div class="info-group">
                            <span class="info-label">Prix actuel</span>
                            <div class="info-value">
                                {% if asset.currency %}
                                    {{ asset.currentPrice|number_format(2, '.', ' ') }} {{ asset.currency }}
                                {% else %}
                                    ${{ asset.currentPrice|number_format(2, '.', ' ') }}
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                        
                        {% if asset.exchange %}
                        <div class="info-group">
                            <span class="info-label">Plateforme</span>
                            <div class="info-value">{{ asset.exchange }}</div>
                        </div>
                        {% endif %}
                        
                        {% if asset.isin %}
                        <div class="info-group">
                            <span class="info-label">Code ISIN</span>
                            <div class="info-value">
                                <code>{{ asset.isin }}</code>
                            </div>
                        </div>
                        {% endif %}
                        
                        <div class="info-group">
                            <span class="info-label">Statut</span>
                            <div class="info-value">
                                {% if asset.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if asset.description %}
                <div class="info-group">
                    <span class="info-label">Description</span>
                    <div class="info-value">{{ asset.description|nl2br }}</div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Recent Transactions -->
        {% if asset.transactions|length > 0 %}
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-history me-2"></i>
                    Transactions récentes
                </h3>
                <div class="card-actions">
                    <a href="{{ path('app_transaction_new') }}" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>
                        Nouvelle transaction
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="modern-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Quantité</th>
                                <th>Prix unitaire</th>
                                <th>Total</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for transaction in asset.transactions|slice(0, 5) %}
                            <tr>
                                <td class="transaction-date">
                                    <div class="date-main">{{ transaction.date|date('d/m/Y') }}</div>
                                    <div class="date-time">{{ transaction.date|date('H:i') }}</div>
                                </td>
                                <td>
                                    <span class="status-badge {{ transaction.type|lower }}">
                                        {{ transaction.getTypeLabel() }}
                                    </span>
                                </td>
                                <td class="transaction-quantity">{{ transaction.quantity }}</td>
                                <td class="transaction-price">
                                    {% if transaction.unit_price_usd %}
                                        ${{ transaction.unit_price_usd|number_format(2, '.', ' ') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="transaction-total">
                                    {% if transaction.unit_price_usd %}
                                        ${{ transaction.getTotalAmount()|number_format(2, '.', ' ') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if asset.transactions|length > 5 %}
                <div class="card-footer text-center">
                    <a href="{{ path('app_transaction_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>
                        Voir toutes les transactions
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
    
    <div class="col-lg-4">
        <!-- Quick Actions -->
        <div class="content-card mb-4">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-bolt me-2"></i>
                    Actions rapides
                </h5>
            </div>
            <div class="card-body">
                <div class="quick-actions">
                    <a href="{{ path('app_transaction_new') }}" class="quick-action">
                        <i class="fas fa-plus"></i>
                        <span>Nouvelle transaction</span>
                    </a>
                    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}" class="quick-action">
                        <i class="fas fa-edit"></i>
                        <span>Modifier l'actif</span>
                    </a>
                    <a href="{{ path('app_asset_index') }}" class="quick-action">
                        <i class="fas fa-list"></i>
                        <span>Voir tous les actifs</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Asset Statistics -->
        <div class="content-card">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="fas fa-chart-bar me-2"></i>
                    Statistiques
                </h5>
            </div>
            <div class="card-body">
                <div class="data-stats">
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-item">
                                <div class="stat-number">{{ asset.transactions|length }}</div>
                                <div class="stat-label">Transactions</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item">
                                <div class="stat-number">{{ asset.withdrawals|length }}</div>
                                <div class="stat-label">Retraits</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                {% if asset.lastPriceUpdate %}
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="fas fa-clock me-1"></i>
                        Dernière mise à jour: {{ asset.lastPriceUpdate|date('d/m/Y H:i') }}
                    </small>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
// Fonction pour obtenir l'icône selon le type d'actif
function getAssetTypeIcon(type) {
    const icons = {
        'crypto': 'coins',
        'stock': 'chart-line',
        'etf': 'chart-area',
        'bond': 'hand-holding-usd',
        'savings': 'piggy-bank',
        'real_estate': 'home',
        'commodity': 'box',
        'currency': 'dollar-sign'
    };
    return icons[type] || 'chart-pie';
}
</script>
{% endblock %}
