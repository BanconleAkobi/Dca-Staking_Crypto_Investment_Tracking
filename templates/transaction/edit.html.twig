{% extends 'dashboard/layout.html.twig' %}

{% block page_title %}Modifier la transaction{% endblock %}
{% block page_subtitle %}Modifiez les détails de cette opération{% endblock %}

{% block dashboard_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-edit"></i>
                    Modifier la transaction
                </h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
                
                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger-modern alert-modern mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.crypto, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.crypto) }}
                            {% if form.crypto.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.crypto) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type) }}
                            {% if form.type.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.type) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date) }}
                            {% if form.date.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.date) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.quantity, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.quantity) }}
                            {% if form.quantity.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.quantity) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.unit_price_usd, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.unit_price_usd) }}
                            {% if form.unit_price_usd.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.unit_price_usd) }}
                                </div>
                            {% endif %}
                            <div class="form-text">Laissez vide pour les récompenses de staking</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fee_usd, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.fee_usd) }}
                            {% if form.fee_usd.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.fee_usd) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.note, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.note) }}
                    {% if form.note.vars.errors|length > 0 %}
                        <div class="text-danger small mt-1">
                            {{ form_errors(form.note) }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary-modern btn-modern">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour
                    </a>
                    <button type="submit" class="btn btn-primary-modern btn-modern">
                        <i class="fas fa-save me-2"></i>
                        Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
