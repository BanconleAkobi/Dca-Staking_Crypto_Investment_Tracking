{% extends 'dashboard/layout.html.twig' %}

{% block page_title %}Nouvelle transaction{% endblock %}
{% block page_subtitle %}Ajoutez une nouvelle opération à votre portefeuille{% endblock %}

{% block dashboard_content %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="content-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-plus-circle"></i>
                    Nouvelle transaction
                </h3>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
                
                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger-modern alert-modern mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
                
                <!-- Sélection du type d'investissement -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="form-label">Type d'investissement</label>
                            <div class="btn-group w-100" role="group" id="investmentTypeSelector">
                                <input type="radio" class="btn-check" name="investment_type" id="type_crypto" value="crypto" autocomplete="off">
                                <label class="btn btn-outline-primary" for="type_crypto">
                                    <i class="fas fa-coins me-2"></i>Cryptomonnaie
                                </label>

                                <input type="radio" class="btn-check" name="investment_type" id="type_asset" value="asset" autocomplete="off">
                                <label class="btn btn-outline-primary" for="type_asset">
                                    <i class="fas fa-chart-pie me-2"></i>Actif
                                </label>

                                <input type="radio" class="btn-check" name="investment_type" id="type_savings" value="savings" autocomplete="off">
                                <label class="btn btn-outline-primary" for="type_savings">
                                    <i class="fas fa-piggy-bank me-2"></i>Épargne
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Champs dynamiques selon le type sélectionné -->
                <div id="crypto-fields" class="investment-fields" style="display: none;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.crypto, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.crypto) }}
                                {% if form.crypto.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        {{ form_errors(form.crypto) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div id="asset-fields" class="investment-fields" style="display: none;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.asset, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.asset) }}
                                {% if form.asset.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        {{ form_errors(form.asset) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div id="savings-fields" class="investment-fields" style="display: none;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.savingsAccount, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.savingsAccount) }}
                                {% if form.savingsAccount.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        {{ form_errors(form.savingsAccount) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Type d'opération (commun à tous) -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type) }}
                            {% if form.type.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.type) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date) }}
                            {% if form.date.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.date) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.quantity, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.quantity) }}
                            {% if form.quantity.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.quantity) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.unit_price_usd, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.unit_price_usd) }}
                            {% if form.unit_price_usd.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.unit_price_usd) }}
                                </div>
                            {% endif %}
                            <div class="form-text">Laissez vide pour les récompenses de staking</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fee_usd, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.fee_usd) }}
                            {% if form.fee_usd.vars.errors|length > 0 %}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.fee_usd) }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.note, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.note) }}
                    {% if form.note.vars.errors|length > 0 %}
                        <div class="text-danger small mt-1">
                            {{ form_errors(form.note) }}
                        </div>
                    {% endif %}
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('app_transaction_index') }}" class="btn btn-secondary-modern btn-modern">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour
                    </a>
                    <button type="submit" class="btn btn-primary-modern btn-modern">
                        <i class="fas fa-save me-2"></i>
                        Enregistrer
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const typeSelector = document.getElementById('investmentTypeSelector');
    const cryptoFields = document.getElementById('crypto-fields');
    const assetFields = document.getElementById('asset-fields');
    const savingsFields = document.getElementById('savings-fields');
    
    // Fonction pour masquer tous les champs
    function hideAllFields() {
        cryptoFields.style.display = 'none';
        assetFields.style.display = 'none';
        savingsFields.style.display = 'none';
    }
    
    // Fonction pour afficher les champs selon le type sélectionné
    function showFields(type) {
        hideAllFields();
        
        switch(type) {
            case 'crypto':
                cryptoFields.style.display = 'block';
                break;
            case 'asset':
                assetFields.style.display = 'block';
                break;
            case 'savings':
                savingsFields.style.display = 'block';
                break;
        }
    }
    
    // Écouter les changements de sélection
    typeSelector.addEventListener('change', function(e) {
        if (e.target.type === 'radio') {
            showFields(e.target.value);
        }
    });
    
    // Masquer tous les champs au chargement
    hideAllFields();
});
</script>
{% endblock %}
