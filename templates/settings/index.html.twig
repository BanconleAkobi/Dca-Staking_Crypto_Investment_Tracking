                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Theme toggle switch
    const themeToggle = document.getElementById('theme-toggle-switch');
    const currentTheme = '{{ current_theme }}';
    
    // Set initial state
    if (currentTheme === 'dark') {
        themeToggle.checked = true;
    }
    
    // Theme toggle functionality
    themeToggle.addEventListener('change', function() {
        const newTheme = this.checked ? 'dark' : 'light';
        
        fetch('{{ path('app_settings_theme', {'theme': 'THEME_PLACEHOLDER'}) }}'.replace('THEME_PLACEHOLDER', newTheme), {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Apply theme immediately
                applyTheme(newTheme);
                showNotification('Th√®me chang√© avec succ√®s!', 'success');
            }
        })
        .catch(error => {
            console.error('Error changing theme:', error);
        });
    });
    
    // Apply theme function
    function applyTheme(theme) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
    }
    
    // Export data function
    window.exportData = function() {
        // This would typically generate and download a CSV/JSON file
        showNotification('Fonctionnalit√© d\'export en cours de d√©veloppement', 'info');
    };
    
    // Initialize theme on page load
    const savedTheme = localStorage.getItem('theme') || currentTheme;
    applyTheme(savedTheme);
});
</script>
{% endblock %}
