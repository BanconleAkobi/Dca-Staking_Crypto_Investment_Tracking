{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu functionality
    const mobileMenuToggle = document.getElementById('mobileMenuToggle');
    const sidebarClose = document.getElementById('sidebarClose');
    const sidebar = document.getElementById('dashboardSidebar');
    let isOpeningSidebar = false;
    
    // Open sidebar when mobile menu button is clicked
    if (mobileMenuToggle && sidebar) {
        console.log('Mobile menu toggle found:', mobileMenuToggle);
        console.log('Sidebar found:', sidebar);
        
        // Try multiple event types to ensure click works
        mobileMenuToggle.addEventListener('click', function(e) {
            console.log('Mobile menu button clicked!');
            e.preventDefault();
            e.stopPropagation();
            isOpeningSidebar = true;
            sidebar.classList.add('sidebar-open');
            document.body.classList.add('sidebar-open');
            console.log('Sidebar classes after click:', sidebar.className);
            console.log('Sidebar computed style transform:', window.getComputedStyle(sidebar).transform);
            console.log('Sidebar visibility:', window.getComputedStyle(sidebar).visibility);
            console.log('Sidebar display:', window.getComputedStyle(sidebar).display);
            
            // Reset flag after a short delay
            setTimeout(() => {
                isOpeningSidebar = false;
            }, 100);
        });
        
        // Also try touchstart for mobile devices
        mobileMenuToggle.addEventListener('touchstart', function(e) {
            console.log('Mobile menu button touched!');
            e.preventDefault();
            e.stopPropagation();
            isOpeningSidebar = true;
            sidebar.classList.add('sidebar-open');
            document.body.classList.add('sidebar-open');
            console.log('Sidebar classes after touch:', sidebar.className);
            
            // Reset flag after a short delay
            setTimeout(() => {
                isOpeningSidebar = false;
            }, 100);
        });
        
        // Add mousedown as backup
        mobileMenuToggle.addEventListener('mousedown', function(e) {
            console.log('Mobile menu button mousedown!');
            e.preventDefault();
            e.stopPropagation();
            isOpeningSidebar = true;
            sidebar.classList.add('sidebar-open');
            document.body.classList.add('sidebar-open');
            console.log('Sidebar classes after mousedown:', sidebar.className);
            
            // Reset flag after a short delay
            setTimeout(() => {
                isOpeningSidebar = false;
            }, 100);
        });
        
        // Add visual feedback to test if button is clickable
        mobileMenuToggle.addEventListener('mouseenter', function() {
            console.log('Mouse entered mobile menu button');
            this.style.background = '#5a6fd8';
        });
        
        mobileMenuToggle.addEventListener('mouseleave', function() {
            console.log('Mouse left mobile menu button');
            this.style.background = '#667eea';
        });
    } else {
        console.log('Mobile menu elements not found:', {
            mobileMenuToggle: mobileMenuToggle,
            sidebar: sidebar
        });
    }
    
    // Close sidebar when close button is clicked
    if (sidebarClose && sidebar) {
        sidebarClose.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            sidebar.classList.remove('sidebar-open');
            document.body.classList.remove('sidebar-open');
            console.log('Sidebar closed, mobile menu button should be visible again');
        });
    }
    
    // Close sidebar when clicking outside on mobile
    document.addEventListener('click', function(e) {
        if (window.innerWidth < 992 && !isOpeningSidebar) {
            // Don't close if clicking on mobile menu button or its children
            if (!sidebar.contains(e.target) && 
                !mobileMenuToggle.contains(e.target) &&
                !e.target.closest('.mobile-menu-toggle')) {
                sidebar.classList.remove('sidebar-open');
                document.body.classList.remove('sidebar-open');
                console.log('Sidebar closed by clicking outside, mobile menu button should be visible again');
            }
        }
    });
    
    // Close sidebar when clicking on nav links on mobile
    const navLinks = document.querySelectorAll('.nav-link');
    navLinks.forEach(link => {
        link.addEventListener('click', function() {
            if (window.innerWidth < 992) {
                sidebar.classList.remove('sidebar-open');
                document.body.classList.remove('sidebar-open');
                console.log('Sidebar closed by nav link click, mobile menu button should be visible again');
            }
        });
    });
    
    // Quick add transaction
    const saveQuickBtn = document.getElementById('saveQuickTransaction');
    if (saveQuickBtn) {
        saveQuickBtn.addEventListener('click', function() {
            const crypto = document.getElementById('quickCrypto').value;
            const type = document.getElementById('quickType').value;
            const quantity = document.getElementById('quickQuantity').value;
            const price = document.getElementById('quickPrice').value;
            const fee = document.getElementById('quickFee').value;
            const date = document.getElementById('quickDate').value;
            const note = document.getElementById('quickNote').value;
            
            if (!crypto || !quantity) {
                alert('Veuillez remplir au moins la cryptomonnaie et la quantit√©.');
                return;
            }
            
            // Here you would typically make an AJAX call to save the transaction
            console.log('Saving transaction:', { crypto, type, quantity, price, fee, date, note });
            
            // For now, just close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('quickAddModal'));
            modal.hide();
            
            // Show success message
            showNotification('Transaction ajout√©e avec succ√®s!', 'success');
        });
    }
    
    // Theme toggle functionality
    const headerThemeToggle = document.getElementById('header-theme-toggle');
    console.log('Header theme toggle found:', headerThemeToggle);
    
    if (headerThemeToggle) {
        // Get current theme from session or default to light
        const currentTheme = '{{ app.session.get('theme', 'light') }}';
        console.log('Current theme from session:', currentTheme);
        
        if (currentTheme === 'dark') {
            headerThemeToggle.checked = true;
            console.log('Set theme toggle to checked (dark mode)');
        }
        
        headerThemeToggle.addEventListener('change', function() {
            console.log('Theme toggle changed!', this.checked);
            const newTheme = this.checked ? 'dark' : 'light';
            console.log('New theme:', newTheme);
            
            fetch('{{ path('app_settings_theme', {'theme': 'THEME_PLACEHOLDER'}) }}'.replace('THEME_PLACEHOLDER', newTheme), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                console.log('Theme change response:', data);
                if (data.success) {
                    applyTheme(newTheme);
                    showNotification('Th√®me chang√© avec succ√®s!', 'success');
                }
            })
            .catch(error => {
                console.error('Error changing theme:', error);
                applyTheme(newTheme);
            });
        });
        
        // Also add click event to the label for better mobile support
        const themeLabel = document.querySelector('.theme-toggle-header .theme-switch-label');
        if (themeLabel) {
            console.log('Theme label found:', themeLabel);
            themeLabel.addEventListener('click', function(e) {
                console.log('Theme label clicked!');
                e.preventDefault();
                headerThemeToggle.checked = !headerThemeToggle.checked;
                headerThemeToggle.dispatchEvent(new Event('change'));
            });
        }
    } else {
        console.log('Header theme toggle NOT found!');
    }
    
    // Apply theme function
    function applyTheme(theme) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        
        // Update all theme toggles
        const allToggles = document.querySelectorAll('.theme-switch');
        allToggles.forEach(toggle => {
            toggle.checked = theme === 'dark';
        });
        
        // Force CSS update
        document.body.style.display = 'none';
        document.body.offsetHeight; // Trigger reflow
        document.body.style.display = '';
        
        console.log('Theme applied:', theme);
    }
    
    // Initialize theme on page load
    const savedTheme = localStorage.getItem('theme') || '{{ app.session.get('theme', 'light') }}';
    console.log('Initializing theme:', savedTheme);
    applyTheme(savedTheme);
    
    // Notification system
    function showNotification(message, type = 'info') {
        const notification = document.createElement('div');
        notification.className = `alert alert-${type === 'success' ? 'success' : 'info'}-modern alert-modern notification`;
        notification.innerHTML = `
            <i class="fas fa-${type === 'success' ? 'check-circle' : 'info-circle'} me-2"></i>
            ${message}
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.classList.add('show');
        }, 100);
        
        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
                document.body.removeChild(notification);
            }, 300);
        }, 3000);
    }
});
</script>

