# Test environment configuration
# This file is used when running tests (APP_ENV=test)

###> doctrine/doctrine-bundle ###
# Use SQLite for testing - it's fast and doesn't require a separate database server
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data_test.db"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# Use in-memory transport for testing
MESSENGER_TRANSPORT_DSN=in-memory://
###< symfony/messenger ###

###> symfony/mailer ###
# Use null transport for testing - emails will be captured by the test framework
MAILER_DSN=null://null
###< symfony/mailer ###
