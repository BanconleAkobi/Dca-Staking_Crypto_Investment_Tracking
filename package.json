{
  "name": "crypto-investment-tracker",
  "version": "1.0.0",
  "description": "Plateforme compl√®te de gestion d'investissements multi-actifs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:accessibility": "pa11y-ci",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "lighthouse-ci",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "analyze": "webpack-bundle-analyzer public/build/entrypoints.json"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cypress/webpack-preprocessor": "^5.17.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "babel-jest": "^29.7.0",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "@lhci/cli": "^0.12.0",
    "pa11y-ci": "^3.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "bootstrap": "^5.3.2",
    "@fortawesome/fontawesome-free": "^6.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/vendor/**/*.js"
    ],
    "coverageDirectory": "var/coverage/js",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "cypress": {
    "baseUrl": "http://localhost:8000",
    "supportFile": "tests/cypress/support/e2e.js",
    "specPattern": "tests/cypress/e2e/**/*.cy.js",
    "video": true,
    "screenshotOnRunFailure": true
  },
  "lighthouse": {
    "ci": {
      "collect": {
        "url": ["http://localhost:8000"],
        "numberOfRuns": 3
      },
      "assert": {
        "assertions": {
          "categories:performance": ["error", {"minScore": 0.9}],
          "categories:accessibility": ["error", {"minScore": 0.9}],
          "categories:best-practices": ["error", {"minScore": 0.9}],
          "categories:seo": ["error", {"minScore": 0.9}]
        }
      },
      "upload": {
        "target": "temporary-public-storage"
      }
    }
  },
  "pa11y": {
    "defaults": {
      "standard": "WCAG2AA",
      "timeout": 5000,
      "wait": 1000
    },
    "urls": [
      "http://localhost:8000",
      "http://localhost:8000/investment/dashboard",
      "http://localhost:8000/investment/investments",
      "http://localhost:8000/investment/calendar",
      "http://localhost:8000/investment/assemblies",
      "http://localhost:8000/investment/documents",
      "http://localhost:8000/communication/notifications"
    ]
  }
}